<?xml version="1.0" encoding="utf-8"?>
<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="font">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="fonts">
          <xs:complexType>
            <xs:sequence>
              <xs:element maxOccurs="unbounded" name="font" type="xs:string" />
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="sizes">
          <xs:complexType>
            <xs:sequence>
              <xs:element maxOccurs="unbounded" name="size" type="xs:unsignedByte" />
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="colors">
          <xs:complexType>
            <xs:sequence>
              <xs:element maxOccurs="unbounded" name="color" type="xs:string" />
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>